DATABASE_URL="postgresql://user:password@host:5432/ai_content_agent?schema=public"
PORT=3001
NODE_ENV=development

# AI Provider (OpenRouter)
OPENAI_API_KEY=sk-or-v1-your-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o

# Notion CMS
NOTION_API_KEY=ntn_your_notion_api_key_here
NOTION_CONTENT_DATABASE_ID=your_content_database_id_here
NOTION_TRIGGER_DATABASE_ID=
NOTION_POLLING_ENABLED=false
NOTION_POLLING_INTERVAL_MS=60000

# Image Generation (cover images, separate OpenRouter key)
IMAGE_GENERATION_ENABLED=true
IMAGE_GENERATION_API_KEY=sk-or-v1-your-image-api-key-here
IMAGE_GENERATION_MODEL=openai/dall-e-2

LOG_LEVEL=debug
